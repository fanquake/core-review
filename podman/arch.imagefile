FROM archlinux:latest

RUN pacman --noconfirm -Syu \
    autoconf \
    automake \
    awk \
    bison \
    boost \
    capnproto
    cmake \
    curl \
    git \
    gcc \
    libevent \
    make \
    patch \
    pkg-config \
    python3 \
    qrencode \
    qt6-base \
    qt6-tools \
    which \
    zeromq

RUN git clone https://github.com/bitcoin/bitcoin && mkdir bitcoin/depends/SDKs

RUN make download -C bitcoin/depends

WORKDIR /bitcoin
